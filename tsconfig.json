{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@acme/config": ["./packages/config/src"],
      "@acme/*": ["./packages/*/src"]
    },
    "baseUrl": "."
  },
  "include": ["agent-stack.config.ts"],
  "exclude": ["node_modules"]
}