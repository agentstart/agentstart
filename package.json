{
  "name": "@agentstart/root",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "pnpm run build",
    "up": "taze -Ir",
    "add": "tsx scripts/install-deps.ts",
    "build": "turbo build --filter {./packages/*}",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "dev": "turbo dev --filter {./packages/*}",
    "dev:example": "turbo dev --filter {./packages/*} --filter example-nextjs",
    "dev:web": "turbo dev --filter {./packages/*} --filter web",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:ws": "pnpm dlx sherif@latest -f",
    "typecheck": "turbo run typecheck",
    "docker:up": "docker compose up -d"
  },
  "devDependencies": {
    "@agentstart/biome-config": "workspace:*",
    "@agentstart/tsconfig": "workspace:*",
    "@biomejs/biome": "catalog:",
    "@clack/prompts": "catalog:",
    "fast-glob": "catalog:",
    "taze": "catalog:",
    "tsx": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "yaml": "catalog:"
  },
  "packageManager": "pnpm@10.22.0",
  "overrides": {
    "@tanstack/query-core": "5.90.5",
    "@tanstack/react-query": "5.90.5"
  }
}
