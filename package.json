    "up": "bunx ncu -i -p bun -w",
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "bunx -F @agent-stack/auth generate",
    "db:push": "turbo -F @agent-stack/db push",
    "db:studio": "turbo -F @agent-stack/db studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @agent-stack/nextjs...",
    "lint": "turbo run lint",
    "lint:ws": "bunx sherif@latest",
    "lint:ws:fix": "bunx sherif@latest -f",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "stripe:webhook": "stripe listen --forward-to localhost:3000/api/auth/stripe/webhook",
    "i18n": "turbo run i18n"
  },
