  "dependencies": {
    "@agent-stack/types": "workspace:*",
    "@agent-stack/utils": "workspace:*",
    "better-sqlite3": "catalog:",
    "drizzle-orm": "catalog:",
    "fs-extra": "catalog:",
    "kysely": "catalog:",
    "mongodb": "catalog:",
    "mysql2": "catalog:",
    "pg": "catalog:",
    "redis": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@agent-stack/biome-config": "workspace:*",
    "@agent-stack/tsconfig": "workspace:*",
    "@biomejs/biome": "catalog:",
    "@prisma/client": "catalog:",
    "@types/better-sqlite3": "catalog:",
    "@types/fs-extra": "catalog:",
    "@types/pg": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "publishConfig": {
    "exports": {
      "./adapter": "./dist/adapter/index.js",
      "./db": "./dist/db/index.js",
      "./kv": "./dist/kv/index.js",
      "./package.json": "./package.json"
