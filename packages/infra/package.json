{
  "name": "@agent-stack/infra",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./adapter": {
      "types": "./dist/adapter/index.d.ts",
      "default": "./dist/adapter/index.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "default": "./dist/db/index.js"
    },
    "./kv": {
      "types": "./dist/kv/index.d.ts",
      "default": "./dist/kv/index.js"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "lint": "bunx biome check --write ./src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@agent-stack/utils": "workspace:*",
    "redis": "catalog:"
  },
  "devDependencies": {
    "@agent-stack/biome-config": "*",
    "@agent-stack/tsconfig": "*",
    "@biomejs/biome": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
