{
  "name": "@agent-stack/infra",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./adapter": "./src/adapter/index.ts",
    "./db": "./src/db/index.ts",
    "./kv": "./src/kv/index.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
