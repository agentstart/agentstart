    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@vercel/postgres": "catalog:",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@agent-stack/eslint-config": "*",
    "@agent-stack/prettier-config": "*",
    "@agent-stack/tsconfig": "*",
    "dotenv-cli": "catalog:",
    "drizzle-kit": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@agent-stack/prettier-config"
}
