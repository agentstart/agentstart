{
  "name": "agent-stack",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./adapter": "./src/adapter.ts",
    "./client": "./src/client.ts",
    "./db": "./src/db.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "lint": "bunx biome check --write ./src",
    "typecheck": "tsc --noEmit",
    "test": "bun run prisma:push && vitest",
    "prisma:push": "prisma db push --schema src/adapter/prisma/test/schema.prisma"
  },
  "dependencies": {
    "@agent-stack/agent": "workspace:*",
    "@agent-stack/api": "workspace:*",
    "@agent-stack/client": "workspace:*",
    "@agent-stack/infra": "workspace:*",
    "@agent-stack/integration": "workspace:*",
    "@agent-stack/sandbox": "workspace:*",
    "@agent-stack/types": "workspace:*",
    "@agent-stack/utils": "workspace:*"
  },
  "devDependencies": {
    "@agent-stack/biome-config": "workspace:*",
    "@agent-stack/tsconfig": "workspace:*",
    "@biomejs/biome": "catalog:",
    "@prisma/client": "catalog:",
    "@types/better-sqlite3": "catalog:",
    "@types/pg": "catalog:",
    "better-sqlite3": "catalog:",
    "drizzle-kit": "catalog:",
    "drizzle-orm": "catalog:",
    "kysely": "catalog:",
    "mongodb": "catalog:",
    "mysql2": "catalog:",
    "pg": "catalog:",
    "prisma": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "ai": "^5"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "publishConfig": {
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      },
      "./adapter": {
        "import": "./dist/adapter.js",
        "require": "./dist/adapter.cjs"
      },
      "./client": {
        "import": "./dist/client.js",
        "require": "./dist/client.cjs"
      },
      "./db": {
        "import": "./dist/db.js",
        "require": "./dist/db.cjs"
      },
      "./package.json": "./package.json"
    }
  }
}
